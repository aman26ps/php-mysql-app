server:
  log_level: info

metrics:
  configs:
    - name: default
      scrape_interval: 15s
      scrape_configs:
        - job_name: 'php-app'
          metrics_path: /metrics
          static_configs:
            - targets: ['php-app:80']
        - job_name: 'node'
          static_configs:
            - targets: ['node-exporter:9100']
        - job_name: 'cadvisor'
          static_configs:
            - targets: ['cadvisor:8080']
      remote_write:
        - url: https://prometheus-prod-24-prod-eu-west-2.grafana.net/api/prom/push
          headers:
            Authorization: "Bearer ${GRAFANA_BEARER_TOKEN}"
